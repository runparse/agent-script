{
  "name": "code-agents",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/code-agents/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/code-agents/dist",
        "main": "packages/code-agents/src/index.ts",
        "tsConfig": "packages/code-agents/tsconfig.lib.json",
        "assets": ["packages/code-agents/*.md"]
      }
    },
    "postBuild": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm version patch --no-git-tag-version --no-workspaces"],
        "cwd": "packages/code-agents"
      }
    }
  }
}
