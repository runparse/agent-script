{
  "name": "code-agents-instrumentation",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/code-agents-instrumentation/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project code-agents-instrumentation --web",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": ["rm -rf dist", "rollup -c rollup.config.js"],
        "cwd": "packages/code-agents-instrumentation",
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": ["agents"]
        }
      ]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm publish"],
        "cwd": "packages/code-agents-instrumentation",
        "parallel": false
      }
    }
  }
}
