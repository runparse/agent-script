{
  "name": "web-agents",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/web-agents/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": ["rm -rf dist", "rollup -c rollup.config.js"],
        "cwd": "packages/web-agents",
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": ["agents", "code-agents-instrumentation"]
        }
      ]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm publish"],
        "cwd": "packages/web-agents",
        "parallel": false
      }
    },
    "cli": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm ts-node packages/web-agents/src/scripts/cli.ts"]
      }
    }
  }
}
