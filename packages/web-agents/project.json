{
  "name": "web-agents",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/web-agents/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/web-agents/dist",
        "main": "packages/web-agents/src/index.ts",
        "tsConfig": "packages/web-agents/tsconfig.lib.json",
        "assets": ["packages/web-agents/*.md"]
      }
    },
    "postBuild": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm version patch --no-git-tag-version --no-workspaces"],
        "cwd": "packages/web-agents"
      }
    },
    "build:package": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm run build"],
        "cwd": "packages/web-agents"
      },
      "dependsOn": [
        {
          "target": "build:package",
          "projects": ["agents", "code-agents-instrumentation"]
        }
      ]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npm publish"],
        "cwd": "packages/web-agents",
        "parallel": false
      }
    },
    "cli": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm ts-node packages/web-agents/src/scripts/cli.ts"]
      }
    }
  }
}
